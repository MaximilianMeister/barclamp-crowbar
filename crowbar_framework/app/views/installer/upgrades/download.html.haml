.row
  .col-lg-12
    = form_tag download_upgrade_path, method: "post" do
      .panel.panel-default
        .panel-heading
          %h2
            = t("installer.upgrades.header", product:
	    branding_config.page_title)

        .panel-plain.wizard
          = render partial: "nav", locals: { active: :download }

          .wizard-body.col-lg-9
            %h2
              = t(".header")

            %p
              = t(".description")

        .panel-footer
          .row
            .col-lg-3
              /= progress_steps 6, 1, 8

            .col-lg-9.text-right
              .btn-group{ role: "group" }
                = button_tag icon_tag(:chevron_right, t(".continue")),
                  class: "btn btn-primary"
